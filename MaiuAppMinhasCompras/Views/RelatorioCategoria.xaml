
    
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaiuAppMinhasCompras.Views.RelatorioCategoria"
            Title="Relatório de Gastos por Categoria">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Relatório de Gastos por Categoria"
               FontSize="22"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#4CAF50"/>

        <ListView x:Name="lstRelatorio">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Categoria}"
                              Detail="{Binding Total, StringFormat='R$ {0:F2}'}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>